<%- include("partials/header"); -%>


<div class="container">
    <div class="row g-3">
<% dropItems.forEach(function(newDrop){ %>
    
    <div class=" col-12 col-sm-6  col-md-4 col-lg-3">
        <div class="drop-card shadow-sm p-3  text-center">
            <form action="/delete" method="post">
        
                <button type="submit" class="close-btn" name="delete" value="<%= newDrop._id %>">
                    <i class="fa-solid fa-circle-xmark close-icon"></i>
               </button>
    
            <div>
                <h3><%= newDrop.name %> </h3>
                <button class="btn btn-primary btn-sm"><a class="text-decoration-none text-light" href="http://www.<%= newDrop.link %>" target="_blank">Go to</a></button>
            </div>
        
        </form>

        </div>
        
    </div> 
    <%})%>
   
    
</div>
</div>



<%- include("partials/footer"); -%>